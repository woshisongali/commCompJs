.s-zoom-container {
  position: fixed;
  z-index: 200;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  &.mask {
    background: rgba(15, 15, 15, 0.7);
  }
  span.prev, span.next, span.close {
    background: url(//img.testUrl.com/public/154259582110651562496_600_68.png) no-repeat
    background-size: 300px
    width 40px
    height 40px
    // border 1px solid red
  }
  span.prev {
    background-position: 4px 0px
    &:hover {
      background-position: -38px 0px
    }
  }
  span.next {
    background-position: -103px 0px
    &:hover {
      background-position: -155px 0px
    }
  }
  span.close {
      position: absolute;
      width: 40px;
      height: 40px;
      cursor: pointer;
      right: 5px;
      top: 5px;
      background-position: -212px 0px
      &:hover {
        background-position: -263px 0px
      }
    }
  .img-wraper {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    line-height: 36px;
    box-sizing: border-box;
    // padding: 36px;
    background: #fff;
    // top 50%
    // transform: translateY(-50%)
    // -webkit-transform: translateY(-50%)
    
  }
  .zoom-btns {
    position absolute
    width 900px
    margin auto
    top 50%
    left 0px
    right 0px
    span {
      position absolute
      z-index: 20
      cursor: pointer
      &.prev{
        left 4px
      }
      &.next {
        right 5px
      }
    }
  }
}